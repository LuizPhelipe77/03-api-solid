
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password_hash String                        // senha criptografada 'hash' embaralha a senha
  created_at DateTime @default(now())         // data que o usuario foi armazenado no sistema

  @@map("users")  //nome da tabela
}

model checkIn {
  id String @id @default(uuid())
  created_at DateTime @default(now())          // data que o usuario fez o checkin
  valitated_at DateTime?                       // token esta validado

  @@map("check_ins")
}

model Gym {
  id String @id @default(uuid())
  title String
  description String?
  phone String?
  latitude Decimal
  longitube Decimal

  @@map("gyms")
}